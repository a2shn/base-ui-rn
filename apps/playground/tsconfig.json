{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@base-ui-rn/*": ["../../packages/*/src"],
      "@/*": ["src/*"]
    },
    "types": ["jest", "@testing-library/react-native"]
  },
  "include": ["**/*.ts", "**/*.tsx", "../../packages/**/src/**/*"]
}
